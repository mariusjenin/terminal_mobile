<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TerminalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mainOrange</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarColor" tools:targetApi="27">@android:color/white</item>
    </style>

    <!-- Notification bar translucent -->
    <style name="TerminalThemeTranslucent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="IdentificationSubmitButtonOrangeTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_submit_identification</item>
    </style>

    <style name="SubmitButtonOrangeTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_submit_orange</item>
    </style>

    <style name="ButtonWhiteRadiusElevation" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_white</item>
    </style>

    <style name="BackgroundWhiteElement">
        <item name="android:background">@drawable/background_white_element_radius</item>
    </style>

    <style name="BackgroundWhiteElementBottomRadius">
        <item name="android:background">@drawable/background_white_element_radius_bottom</item>
    </style>

    <style name="BackgroundDarkBlueElementBottomRadius">
        <item name="android:background">@drawable/background_dark_blue_element_radius_bottom</item>
    </style>

    <style name="BackgroundWhiteElementBottomLeftRadius">
        <item name="android:background">@drawable/background_white_element_radius_bottom_left</item>
    </style>

</resources>